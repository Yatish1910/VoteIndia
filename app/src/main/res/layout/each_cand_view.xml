<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="50pt"
    android:layout_margin="15dp"
    app:cardCornerRadius="10sp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/name_of_candidate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/name_of_party"
            android:text="Narendra Modi"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:padding="10dp"
            />
        <TextView
            android:id="@+id/name_of_party"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/name_of_candidate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="BJP"
            android:textSize="15dp"
            android:padding="10dp"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/photo_of_candidate"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="205dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/name_of_candidate"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="5dp"
            app:layout_constraintEnd_toStartOf="@id/photo_of_party"
            android:src="@drawable/modi"
            />
        <ImageView
            android:id="@+id/photo_of_party"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:layout_constraintStart_toEndOf="@id/photo_of_candidate"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="150dp"
            android:src="@drawable/modilogo"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

